body {
    font-family: "Lucida Grande","Lucida Sans Unicode",Arial,Verdana,sans-serif;
    font-size: 12px;
    color: #444444;
    background-color: #F5F6F7;
}

a:link, a:visited, a:active {
    color: #444444;
    text-decoration: none;
    font-weight: bold;
}

a:hover, a.focus{
    color: #0088CC;
    text-decoration: none;
}

hr {
    width: 150px;
    text-align: left;
    margin: 0 auto 0 0;
    border: 1px  dashed #d8d8d8;
}

table, td {
    font-family: Arial, sans-serif;
    padding-right: 10px;
    padding-left: 3px;
    font-size: 12px;
}

.tabrow {
    text-align: right;
}

input, select {
    border: 1px solid #D8D8D8;
    color: #666;
    background-color: #F5F6F7;
    font-size: 12px;
    -moz-border-radius: 5px;
    -khtml-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    padding: 2px;
}

.search {
    background-image: url(../../images/search_bg.png);
    float: left;
    width: 148px;
    height: 25px;
}

.search_input {
    font-size: 11px;
    border: 0pt none;
    margin: 4px 0pt 8px 25px;
    float: left;
    background-color: #FFFFFF;
    outline: none; /* no border on safari */
}

.top {
    font-size: 9pt;
    padding-right: 5px;
    height: 75px;
}

.logo{
    margin-top: -5px;
    position: absolute;
    border: 0;
}

.letters {
    float: left;
    margin-left: 300px;
    margin-top: 65px;
    font-size: 9pt;
}

.title_path {
    float: left;
}

.stats {
    float: right;
}

.menu {
    float: right;
    text-align: right;
    padding-top: 5px;
}

.footer {
    margin-top: 5px;
    margin-left: 0.2%;
    margin-right: 0.2%;
    padding: 0.5%;
    font-size: 8pt;
    text-align: center;
    border-bottom: 1px solid #d8d8d8;
    color: #76797C;
}

div {
    -moz-border-radius: 5px;
    -khtml-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
}

.title {
    margin-top: 7px;
    margin-left: 0.2%;
    margin-right: 0.2%;
    padding: 0.5%;
    border: 1px solid #d8d8d8;
    height: 15px;
    
    background: #EEEEEE url(title_bg.gif) repeat-x scroll 0 0
}

.main {
    height: 70%;
    margin-top: 7px;
    margin-left: 0.2%;
    margin-right: 0.2%;
    padding: 1%;
    border: 1px solid #d8d8d8;
}

.main_auto {
    height: auto;
    margin-top: 7px;
    margin-left: 0.2%;
    margin-right: 0.2%;
    padding: 1%;
    border: 1px solid #d8d8d8;
}

.zebra0 td {
    color: #666666;
    background-color: #E5E5E5;
}

.zebra1 td {
    color: #666666;
}

.zebra_total {
    color: #666666;
    font-weight: bold;
    background-color: #c5c5c5;
}

.comment {
    margin-top: 5px;
    margin-left: 0.2%;
    margin-right: 0.2%;
    padding: 0.5%;
    font-size: 8pt;
    text-align: center;
    color: #76797C;
}

.iconopacity img{
    filter:progid:DXImageTransform.Microsoft.Alpha(opacity=70);
    -moz-opacity: 0.7;
    border: 0;
}

.iconopacity:hover img{
    filter:progid:DXImageTransform.Microsoft.Alpha(opacity=100);
    -moz-opacity: 1;
}
